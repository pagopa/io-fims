{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "inputs": ["src/**/*.ts"]
    },
    "lint:check": {
      "inputs": ["src/**/*.ts"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.spec.ts"]
    },
    "test:coverage": {
      "dependsOn": ["^test"],
      "inputs": ["src/**/*.spec.ts"]
    },
    "format": {},
    "format:check": {},
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "inputs": ["src/**/*.ts"]
    }
  }
}
