{
  "name": "openid-rp-example-app",
  "private": true,
  "type": "module",
  "version": "0.0.1",
  "description": "Example of Third Party (RP) web application",
  "scripts": {
    "clean": "rimraf dist/",
    "tsc": "tsc",
    "copy-assets": "gulp",
    "start": "node -r dotenv/config dist/src/main.js dotenv_config_path=.env.default",
    "start:clean": "npm-run-all build start",
    "build": "npm-run-all clean tsc copy-assets",
    "test": "jest -i",
    "test:coverage": "jest -i --coverage",
    "prettify": "prettier --write \"./**/*.ts\"",
    "lint": "eslint . -c .eslintrc.js --ext .ts,.tsx --fix && yarn run prettify"
  },
  "author": "PagoPA S.p.A.",
  "license": "MIT",
  "dependencies": {
    "@pagopa/ts-commons": "^10.2.1",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "express-openid-connect": "^2.17.1",
    "fp-ts": "^2.16.2",
    "io-ts": "^2.2.16",
    "io-ts-types": "^0.5.16",
    "monocle-ts": "^2.3.11",
    "newtype-ts": "^0.3.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^1.3.1",
    "@types/copyfiles": "^2.4.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/node": "^20",
    "@types/rimraf": "^3.0.2",
    "@types/supertest": "^2.0.11",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gulp": "^4.0.2",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^5.4.2"
  }
}
