{
  "name": "op-func",
  "private": true,
  "main": "dist/func.js",
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle ./src/func.ts --format=esm --platform=node --target=node20 --outdir=dist --packages=external",
    "build:watch": "yarn build --watch",
    "start": "func start",
    "format": "prettier --write .",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "typecheck": "tsc",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/functions": "^4.3.0",
    "@azure/identity": "^4.1.0",
    "@pagopa/handler-kit": "^1.1.0",
    "@pagopa/handler-kit-azure-func": "^2.0.4",
    "@pagopa/logger": "^1.0.1",
    "fp-ts": "^2.16.5",
    "io-fims-common": "workspace:^",
    "io-ts": "^2.2.21",
    "tsup": "^8.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^4.0.1",
    "@types/node": "^20.12.2",
    "@vitest/coverage-v8": "^1.5.0",
    "esbuild": "^0.21.5",
    "eslint": "8.57.0",
    "prettier": "^3.2.5",
    "typescript": "5.4.3",
    "vitest": "^1.5.0"
  }
}
