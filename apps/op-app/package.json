{
  "name": "op-app",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/web.js",
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/identity": "^4.1.0",
    "@azure/logger": "^1.1.2",
    "@pagopa/openapi-codegen-ts": "^13.2.0",
    "@pagopa/ts-commons": "^13.1.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.19.2",
    "fp-ts": "^2.16.6",
    "helmet": "^7.1.0",
    "i18n": "^0.15.1",
    "io-fims-common": "workspace:^",
    "io-ts": "^2.2.21",
    "jose": "^5.4.0",
    "oidc-provider": "^8.4.6",
    "pino": "^9.1.0",
    "pino-http": "^10.1.0",
    "redis": "^4.6.14",
    "ulid": "^2.3.0",
    "zod": "^3.23.8"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "build": "tsup-node",
    "build:watch": "tsup-node --watch",
    "start": "node .",
    "start:dev": "node --env-file=.env . | pino-pretty",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "generate:io-client": "gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-backend/v13.0.0/openapi/generated/api_fims.yaml --no-strict --out-dir ./src/adapters/outboud/io/generated --request-types --response-decoders --client",
    "generate:api-models": "openapi-zod-client openapi.yaml -o src/adapters/express/api-models.ts -t schemas-only.hbs --export-schemas"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@pagopa/eslint-config": "^4.0.1",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/i18n": "^0.13.12",
    "@types/node": "^20.14.2",
    "@types/oidc-provider": "^8.4.4",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.5.0",
    "eslint": "8.57.0",
    "openapi-zod-client": "^1.16.4",
    "pino-pretty": "^11.2.0",
    "prettier": "3.2.5",
    "supertest": "^7.0.0",
    "tsup": "^8.0.2",
    "vitest": "^1.5.0"
  }
}
