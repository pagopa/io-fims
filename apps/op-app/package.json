{
  "name": "op-app",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/web.js",
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "@azure/identity": "^4.1.0",
    "@azure/logger": "^1.1.2",
    "@pagopa/openapi-codegen-ts": "^13.2.0",
    "@pagopa/ts-commons": "^13.1.0",
    "express": "^4.19.2",
    "fp-ts": "^2.16.6",
    "io-ts": "^2.2.21",
    "oidc-provider": "^8.4.6",
    "pino": "^9.1.0",
    "pino-http": "^10.1.0",
    "quick-lru": "^7.0.0",
    "zod": "^3.23.8"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --fix src",
    "lint:check": "eslint src",
    "build": "tsup-node",
    "build:watch": "tsup-node --watch",
    "start": "node .",
    "start:dev": "node --env-file=.env .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "generate:io-client": "gen-api-models --api-spec https://raw.githubusercontent.com/pagopa/io-backend/v13.0.0/openapi/generated/api_fims.yaml --no-strict --out-dir ./src/adapters/outboud/io/generated --request-types --response-decoders --client"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^4.0.1",
    "@types/express": "^4.17.21",
    "@types/oidc-provider": "^8.4.4",
    "@vitest/coverage-v8": "^1.5.0",
    "eslint": "8.57.0",
    "prettier": "3.2.5",
    "tsup": "^8.0.2",
    "vitest": "^1.5.0"
  }
}
