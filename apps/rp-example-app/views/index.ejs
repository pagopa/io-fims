<!doctype html>
<html>
  <head>
    <title>RP Example</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col">
          <div class="vstack gap-3">
            <div class="p-2">
              <h1>FIMS Sandbox</h1>
              <% if (typeof error !== "undefined") { %>
              <div class="alert alert-danger" role="alert">
                <%= error.message %>
              </div>
              <% } %>
              <% if (typeof profile !== "undefined") { %>
              <p class="lead">Ciao <%= profile.given_name %>, ecco i dati del tuo profilo su IO.</p>
              <table class="table table-striped">
                <thead>
                  <th>Claim</th>
                  <th>Valore</th>
                </thead>
                <tbody>
                  <% Object.entries(profile).forEach(function([claim, value]){ %>
                    <tr>
                      <td><code><%= claim %></code></td>
                      <td><%= value %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <div class="vstack">
              <h2>Qualche problema?</h2>
              <div class="d-grid">
                <a href="mailto:fims-tech@pagopa.it" class="btn btn-primary btn-lg btn-expand">Segnalalo al team</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
